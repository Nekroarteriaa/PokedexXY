<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/colorPrimary"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragments.PokedexBankFragments.PokemonReviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pokemonName"
                        android:text=""
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/pokemonHeight"
                        android:text=""
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/pokemonWeight"
                        android:text=""
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:text="Type"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPokemonType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </androidx.recyclerview.widget.RecyclerView>


                    <TextView
                        android:text="Weakness"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPokemonWeakness"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </androidx.recyclerview.widget.RecyclerView>


                    <TextView
                        android:text="Evolution Family"
                        android:layout_marginBottom="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                    <LinearLayout
                        android:id="@+id/forthEvolutionFamilyLayout"
                        android:weightSum="9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/forthBabyEvolutionFamilyImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible">

                        </ImageView>

                        <ImageView
                            android:id="@+id/forthTeenEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_gravity="center_vertical">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/forthAdultTopEvolutionFormImage"
                                android:layout_weight="1.5"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_launcher_background"
                                android:visibility="visible">

                            </ImageView>

                            <ImageView
                                android:id="@+id/forthAdultBotomEvolutionFormImage"
                                android:layout_weight="1.5"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_launcher_background"
                                android:visibility="visible">

                            </ImageView>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/firstEvolutionFamilyLayout"
                        android:weightSum="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/firstBabyEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/firstTeenEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/firstAdultEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/secondEvolutionFamilyLayout"
                        android:paddingTop="10dp"
                        android:weightSum="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/forthEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/fifthEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/sixthEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/thirdEvolutionFamilyLayout"
                        android:paddingTop="10dp"
                        android:weightSum="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/seventhEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/eightEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>

                        <ImageView
                            android:id="@+id/ninethEvolutionFormImage"
                            android:layout_weight="3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_launcher_background">

                        </ImageView>



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/pokemonReviewImage"
                android:layout_alignTop="@id/cardView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </ImageView>

        </RelativeLayout>


    </RelativeLayout>

